{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "lib/",
    "rootDir": "src/",
    "lib": ["dom","es2017"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "watch": true,
    "declaration": true
  }
}
